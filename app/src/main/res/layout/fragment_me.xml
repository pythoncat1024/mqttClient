<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/item_divider"
    android:orientation="vertical"
    android:showDividers="middle|end|beginning"
    tools:context=".ui.MeFragment">

    <Button
        android:id="@+id/connect_state"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/normal_selector"
        android:drawableStart="@drawable/ic_drive_eta_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="6dp"
        android:text="@string/connect_status"
        android:textSize="18sp" />

    <Button
        android:id="@+id/client_id_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/normal_selector"
        android:drawableStart="@drawable/ic_drive_eta_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="6dp"
        android:text="@string/client_id"
        android:textSize="18sp" />

    <Button
        android:id="@+id/publish_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/normal_selector"
        android:drawableStart="@drawable/ic_drive_eta_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="6dp"
        android:text="发布话题"
        android:textSize="18sp" />

    <Button
        android:id="@+id/subscribe_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/normal_selector"
        android:drawableStart="@drawable/ic_drive_eta_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="6dp"
        android:text="订阅话题"
        android:textSize="18sp" />


</LinearLayout>